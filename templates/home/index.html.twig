    <!-- Masthead-->
    <header class="masthead">
        <div class="container h-100">
            <div class="row h-100 align-items-center justify-content-center text-center">
                <div class="col-lg-12 align-self-end">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <h1 class="text-white font-weight-bold">Bienvenue, {{ app.user.username }}!</h1>
                    {% else %}
                        <img src="{{ asset('img/bg.png') }}" alt="logo-home-page">
                    {% endif %}
                    <hr class="divider my-4" />
                </div>
                <div class="col-lg-8 align-self-baseline">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <button class="btn btn-primary btn-xl home-main-btn">
                            <a class="home-police" href="{{ path('fos_user_security_logout') }}">DÃ©connexion</a>
                        </button>
                    {% else %}
                        <button class="btn btn-primary btn-xl home-main-btn">
                            <a class="js-scroll-trigger home-police" href="#about">Connexion</a>
                            <span class="btn-divider-login">|</span>
                            <a class="js-scroll-trigger home-police" href="#about">S'inscrire</a>
                        </button>
                    {% endif %}
                </div>
            </div>
        </div>
    </header>
    <!-- About section-->
    <section class="page-section bg-dark" id="about">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-3 text-center">
                    <h1 class="text-white mt-0 home-police" id="login-text-color">Connexion</h1>
                    <hr class="divider divider-yellow light my-4" />
                    <p>
                        {{ render(controller('FOS\\UserBundle\\Controller\\SecurityController::loginAction')) }}
                    </p>
                </div>
            </div>
        </div>
    </section>
    <!-- Services section-->
    <section class="page-section" id="services">
        <div class="container">
            <h1 class="text-center mt-0 home-police">Inscription</h1>
            <hr class="divider my-4" />
            <div class="row">
                <div class="col-lg-3 col-md-6 text-center">
                    <p>
{#                        {{ render(controller('FOS\\UserBundle\\Controller\\RegistrationController::registerAction')) }}#}
                    </p>
                </div>
            </div>
        </div>
    </section>
    <!-- Portfolio section-->
    <section id="portfolio">
        <div class="container-fluid p-0">
            <div class="row no-gutters">

            </div>
        </div>
    </section>

{% endblock %}
